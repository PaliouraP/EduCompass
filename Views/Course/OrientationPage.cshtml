@model Tuple<List<Coefficient>, List<Course>>

@{
    ViewData["Title"] = "OrientationPage";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/courses.css" />
}

<!--TODO: ADD ORIENTATION TOTAL GRADE-->
<div class="px-5 py-5">
    <div class="subjects-head">
        <h3 class="my-4">Τα μαθήματα μου</h3>
    </div>
    <div class="orientations mt-3">
        
        @{
            int i = 0;
        }

        @foreach (Coefficient c in Model.Item1)
        {
            <div class="orientation-template px-4 py-3">
                <a data-bs-toggle="collapse" href="#coefficient-@i" role="button" aria-expanded="false"
                   aria-controls="collapseExample" class="row details collapsed">
                    <div class="col-8">
                        <div class="orientation-title">
                            @c.NameInGreek
                        </div>
                        <div class="orientation-progress ">
                            2/4
                        </div>
                    </div>
                    <div class="expand-arrow d-flex justify-content-center align-items-center col-4">
                        <i class="fas fa-arrow-circle-right" aria-hidden="true"></i>
                        <i class="fas fa-arrow-circle-down" aria-hidden="true"></i>
                    </div>
                </a>

                <div class="collapse subjects-list my-4" id="coefficient-@i">
                    <div class="subjects-list">
                        
                        @foreach (Course course in Model.Item2)
                        {
                            switch (c.Name)
                            {
                                case "Software Technology":
                                    
                                    if (course.SoftwareEngineering > 0)
                                        break;
                                    continue;
                                    
                                case "Artificial Intelligence and Machine Learning":
                                    
                                    if (course.AI_ML > 0)
                                        break;
                                    continue;
                                    
                                case "User Interface and User Experience":
                                    
                                    if (course.UI_UX > 0)
                                        break;
                                    continue;
                                    
                                case "Security":
                                    
                                    if (course.Security > 0)
                                        break;
                                    continue;
                                    
                                case "Computer Networks":
                                    
                                    if (course.ComputerNetworks > 0)
                                        break;
                                    continue;
                                    
                                case "Computer Vision and Graphics":
                                    
                                    if (course.ComputerVisionAndGraphics > 0)
                                        break;
                                    continue;
                                    
                                case "Game Development":
                                    
                                    if (course.GameDev > 0)
                                        break;
                                    continue;
                                    
                                case "Database Engineering":
                                    
                                    if (course.DatabaseEngineering > 0)
                                        break;
                                    continue;
                                    
                                case "Web Development":
                                    
                                    if (course.WebDev > 0)
                                        break;
                                    continue;
                                    
                                case "Mobile App Development":
                                    
                                    if (course.MobileAppDev > 0)
                                        break;
                                    continue;
                            }
                            
                            
                            <!--TODO: load actual subjects with correct values and ids-->
                            <div class="subject-card">
                                <label for="file">@course.Name <a href="/Course/CoursePage/"><i class="fas fa-link hyperlink"></i></a></label><br/>
                                <progress id="progress-1" value="86" max="100"> </progress>
                                <script>
                                    check_value('progress-1');
                                </script>
                            </div>
                        }
                        

                    </div>
                </div>
            </div>
            
            {
                i++;
            }
        }




    </div>
</div>
        

