@{
    ViewData["Title"] = "SignUp";
}

@{
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
          integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/login.css" />
    <script src="~/js/close_popup.js"></script>
    <meta content="width=device-width, initial-scale=1" name="viewport" />
</head>

<body class="vh-100">
<section class="mt-5 vh-95">
    @if(@TempData["Error"] != null) {
                <div id="popup_error" class="error-msg overlay px-4 py-4 ">@TempData["Error"]<i class="fas fa-times" onclick="close_popup()"></i></div>
    } 
    <div class="container container-alt center">
        <div class="row mt-1">
            <img src="~/images/logo.png"
                 alt="logo" class="logo-img-small"/>
        </div>
        <div class="d-flex">
            <div class="col-lg-5 col-xl-5 my-auto mx-auto">
                <img src="~/images/sign-up.png"
                     alt="login form" class="sign-up-img"/>
            </div>
            <div class="col-md-8 col-lg-7 col-xl-6 offset-xl-1">
                <h3 class="bold" style="letter-spacing: 1px;">
                    Καλώς ήρθατε στο EduCompass
                </h3>
                <p>
                    Συμπληρώστε τα στοιχεία σας παρακάτω για να εγγραφείτε !
                </p>
                <form method="post">
                    <div class="row mb-1 mx-3 my-auto">
                        <div class="col-6">
                            <input type="text" name="usrnm" id="usrnm" class="form-control form-control-lg"/>
                            <label for="usrnm">Όνομα χρήστη</label>
                        </div>
                        <div class="col-6">
                            <input type="text" name="email" id="email" class="form-control form-control-lg"/>
                            <label for="email">E-mail</label>
                        </div>
                    </div>
                    <div class="row my-1 mx-3">
                        <div class="col-6">
                            <input type="text" name="name" id="name" class="form-control form-control-lg"/>
                            <label for="name">Όνομα</label>
                        </div>
                        <div class="col-6">
                            <input type="text" name="srname" id="srname" class="form-control form-control-lg"/>
                            <label for="srname">Επώνυμο</label>
                        </div>
                    </div>
                    <div class="row my-4 mx-3">
                        <div class="col-6">
                            <input type="password" name="pswrd" id="pswrd" class="form-control form-control-lg"/>
                            <label for="pswrd">Κωδικός πρόσβασης</label>
                        </div>
                        <div class="col-6">
                            <input type="password" name="pswrd2" id="pswrd2" class="form-control form-control-lg"/>
                            <label for="pswrd2">Επιβεβαίωση κωδικού πρόσβασης</label>
                        </div>
                    </div>
                    <div class="row my-4 me-5 justify-content-center">
                        <button class="btn-long" type="submit">Εγγραφή</button>

                    </div>
                    <div class="row mx-3">
                        <p style="color: #393f81;">
                            Έχετε ήδη λογαριασμό; <a href="/Auth/Login/"> Συνδεθείτε εδώ</a>
                        </p>
                    </div>


                </form>
            </div>

        </div>
    </div>
</section>
</body>




