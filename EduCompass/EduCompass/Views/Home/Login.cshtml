@{
    ViewData["Title"] = "Login";
}

<!-- Stylesheet connection for Login page -->
@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

<section class="vh-100" style="background-color: #E9DAC8;">
    <div class="container px-5 py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/images/stacked-books.jpg"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form>

                                    <div class="d-flex mb-3 pb-1">
                                        <img src="~/images/EduCompass.png" alt="logo" class="logo-img"/>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Σύνδεση</h5>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="usrnm" class="form-control form-control-lg" />
                                        <label class="form-label" for="usrnm">Όνομα χρήστη ή e-mail</label>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" id="pswrd" class="form-control form-control-lg" />
                                        <label class="form-label" for="pswrd">Κωδικός πρόσβασης</label>
                                    </div>

                                    <div class="align-items-self-end pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block left" type="button">Σύνδεση</button>
                                    </div>

                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Δεν έχετε λογαριασμό <a href="#!"
                                                                  style="color: #393f81;"> Εγγραφείτε εδώ</a>
                                    </p>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



