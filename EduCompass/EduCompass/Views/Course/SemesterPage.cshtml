@{
    ViewData["Title"] = "SemesterPage";
}

<section class="subjects">
    <div class="content">

        <div class="subjects__head">
            <h3 class="mb-5">Μαθήματα</h3>
        </div>
        <div class="semesters mt-3">
            <div class="semester-template mb-5">
