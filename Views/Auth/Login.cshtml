@{
    ViewData["Title"] = "Login";
}

@{
    Layout = null;
}


<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
          integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/login.css"/>
    <meta content="width=device-width, initial-scale=1" name="viewport" />
</head>

<body class="vh-100">
    <section class="mt-5 vh-95">
        @if(@TempData["Error"] != null) {
            <div id="popup_error" class="error-msg overlay px-4 py-4 ">@TempData["Error"]<i class="fas fa-times" onclick="close_popup()"></i></div>
        } 
        
        <div class="container center">
            <div class="row d-flex align-items-center h-100">
                <div class="d-flex justify-content-center px-5 col-md-8 col-lg-7 col-xl-6">
                    <img src="~/images/login.png"
                         alt="login form" class="main-img"/>
                    
                </div>
                <div class="px-5 col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                    
                    <form method="post">

                        <div class="d-flex justify-content-evenly mb-3 pb-1">
                            <img src="~/images/logo.png" alt="logo" class="logo-img" />
                        </div>

                        <h3 class="bold mb-3" style="letter-spacing: 1px;">Σύνδεση</h3>

                        <div class="form-outline mb-4">
                            <input type="text" name="usrnm" id="usrnm" class="form-control form-control-lg" />
                            <label for="usrnm">Όνομα χρήστη ή e-mail</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" name="pswrd" id="pswrd" class="form-control form-control-lg" />
                            <label for="pswrd">Κωδικός πρόσβασης</label>
                        </div>

                        <div class="d-flex justify-content-evenly pt-1 my-5">
                            <button class="btn-long" type="submit">Σύνδεση</button>
                        </div>

                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                            Δεν έχετε λογαριασμό;
                            <a href="/Auth/SignUp/"> Εγγραφείτε εδώ</a>
                        </p>
                    </form>




                </div>
            </div>
        </div>
    </section>
</body>




