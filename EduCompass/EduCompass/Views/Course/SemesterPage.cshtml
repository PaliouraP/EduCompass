                            <progress id="file" value="0" max="100"> </progress>
                        </div>
                        <div class="subject-card">
                            <label for="file">Subject title</label><br />
                            <progress id="file" value="32" max="100"> </progress>
                        </div>
                        <div class="subject-card">
                            <label for="file">Subject title</label><br />
                            <progress id="file" value="15" max="100"> </progress>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</section>

