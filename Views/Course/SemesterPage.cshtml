@{
    ViewData["Title"] = "SemesterPage";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/courses.css" />
}


<section class="subjects mx-5 my-5">
    <div class="content">

        <div class="subjects-head">
            <h3 class="mb-5">Τα μαθήματα μου</h3>
        </div>
        <div class="semesters mt-3">
            <div class="semester-template px-2 py-2">
                    <a data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false"
                   aria-controls="collapseExample" class="row details">
                        <div class="col-8">
                            <div class="semester-title ">
                                Εξάμηνο 1
                            </div>
                            <div class="semester-progress ">
                                2/6
                            </div>
                        </div>
                        <div class="expand-arrow col-4">
                            <i class="fas fa-arrow-circle-right" aria-hidden="true"></i>
                            <i class="fas fa-arrow-circle-down" aria-hidden="true"></i>
                        </div>
                    </a>

                <div class="collapse subjects-list" id="collapseExample">
                    <div class="subjects-list">
                        <div class="subject-card">
                            <label for="file">Subject title</label><br />
                            <progress id="file" value="100" max="100"> </progress>
                        </div>
                        <div class="subject-card">
                            <label for="file">Subject title</label><br />
                            <progress id="file" value="80" max="100"> </progress>
                        </div>
                        <div class="subject-card">
                            <label for="file">Subject title</label><br />
                            <progress id="file" value="32" max="100"> </progress>
                        </div>
                        <div class="subject-card">
                            <label for="file">Subject title</label><br />
                            <progress id="file" value="0" max="100"> </progress>
                        </div>
                        <div class="subject-card">
                            <label for="file">Subject title</label><br />
                            <progress id="file" value="32" max="100"> </progress>
                        </div>
                        <div class="subject-card">
                            <label for="file">Subject title</label><br />
                            <progress id="file" value="15" max="100"> </progress>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</section>

