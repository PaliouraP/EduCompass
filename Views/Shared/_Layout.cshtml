<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduCompass</title>
    @RenderSection("Styles", true)
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css"
          integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/navigation.css" />
</head>
<body class="vh-100">
    <div class="container center row px-0">
        <!---Navigation--->
        <div class="nav-bg col-auto col-md-3 col-xl-2 d-flex flex-column px-0">
            <div class="d-flex justify-content-center my-5 py-5">
                <img src="~/images/logo-2.png" alt="logo" class="logo-img" />
            </div>
            <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                <li class="navigation-item">
                    <a href="/Home/Index" class="navigation-link align-middle px-auto">
                        <i class="fas fa-home"></i> <span class="ms-5 d-none d-sm-inline">Αρχική</span>
                    </a>
                </li>
                <li class="navigation-item">
                    <a href="/Course/CoursePage/" class="navigation-link align-middle px-auto">
                        <i class="fas fa-book-open"></i> <span class="ms-5 d-none d-sm-inline">Μαθήματα</span>
                    </a>
                </li>

                <li class="navigation-item">
                    <a href="/User/Profile/" class="navigation-link px-auto align-middle">
                        <i class="fas fa-user"></i> <span class="ms-5 d-none d-sm-inline">Προφίλ</span>
                    </a>
                </li>
                <li class="navigation-item">
                    <a href="#" data-bs-toggle="collapse" class="navigation-link px-auto align-middle ">
                        <i class="fas fa-chart-pie"></i> <span class="ms-5 d-none d-sm-inline">Στατιστικά</span>
                    </a>
                    <ul class="collapse nav flex-column ms-1" id="submenu2" data-bs-parent="#menu">
                        <li class="w-100">
                            <a href="#" class="navigation-link px-auto"> <span class="d-none d-sm-inline">Item</span> 1</a>
                        </li>
                        <li>
                            <a href="#" class="navigation-link px-auto"> <span class="d-none d-sm-inline">Item</span> 2</a>
                        </li>
                    </ul>
                </li>
                <li class="navigation-item">
                    <a href="/User/Profile/" class="navigation-link px-auto align-middle">
                        <i class="fas fa-question"></i> <span class="ms-5 d-none d-sm-inline">Βοήθεια</span>
                    </a>
                </li>


            </ul>
            <hr class="py-0 my-0">
            <div class="navigation-item-b py-4">
                <a href="/Auth/Logout" class="navigation-link px-auto align-middle">
                    <i class="fas fa-sign-out-alt"></i> <span class="ms-1 d-none d-sm-inline">Αποσύνδεση</span>
                </a>
            </div>
        </div>
        <div class="col-auto col-md-9 col-xl-10 py-3">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
