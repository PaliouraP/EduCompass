@model User

@{
    ViewData["Title"] = "Profile";
}

@{
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
}

<div>
    <div class="profile-card-body px-5 py-5 mx-4" >
        <h5 class="mb-3" style="letter-spacing: 1px;" id="subject"><b>Γενικά στοιχεία</b></h5>
        <div class="row d-flex justify-content-center">
            <div class="col-sm-3">
                <p class="mb-0">Ονοματεπώνυμο</p>
            </div>
            <div class="col-sm-8 offset-1">
                <p class="text-muted mb-0">@Model.FirstName @Model.LastName</p>
            </div>
        </div>

        <div class="row d-flex justify-content-center">
            <div class="col-sm-3">
                <p class="mb-0">Email</p>
            </div>
            <div class="col-sm-8 offset-1">
                <p class="text-muted mb-0">
                    @Model.Email
                </p>
            </div>
        </div>

        <div class="row d-flex justify-content-center">
            <div class="col-sm-3">
                <p class="mb-0">Όνομα χρήστη</p>
            </div>
            <div class="col-sm-8 offset-1">
                <p class="text-muted mb-0">
                    @Model.Username
                </p>
            </div>
        </div>

        <div class="row d-flex justify-content-center">
            <div class="col-sm-3">
                <p class="mb-0">Μέλος από:</p>
            </div>
            <div class="col-sm-8 offset-1">
                <p class="text-muted mb-0">
                    @Model.Created.ToLongDateString()
                </p>
            </div>
        </div>

        <div class="row mt-4">
            <a asp-controller="User" asp-action="RedoIntroTest" class="btn-long-alt col-5"><i class="fas fa-redo-alt"></i> Εισαγωγικό Tεστ</a>

            <a href="/User/EditProfile" class="btn-long col-5 offset-2"><i class="fas fa-user-edit"></i> Επεξεργασία</a>
        </div>
    </div>
</div>




